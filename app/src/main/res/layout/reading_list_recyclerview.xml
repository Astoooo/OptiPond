<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#EEF9FF"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >

            <androidx.cardview.widget.CardView
                android:id="@+id/dateContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/primary">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/date_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="August 12, 2024"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/dataContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <ImageView
                            android:id="@+id/waterPercentage_Imageview"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/water_percentage_icon"
                            android:layout_marginStart="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Water %"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:id="@+id/waterPercentage_Textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100 %"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/calibribold"
                                android:textSize="25sp"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <ImageView
                            android:id="@+id/phValue_Imageview"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ph_value_icon"
                            android:layout_marginStart="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PhValue"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:id="@+id/phValue_Textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100 %"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/calibribold"
                                android:textSize="25sp"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <ImageView
                            android:id="@+id/oxygen_Imageview"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_oxygen"
                            android:layout_marginStart="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Oxygen"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:id="@+id/oxygen_Textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100 %"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/calibribold"
                                android:textSize="25sp"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <ImageView
                            android:id="@+id/tds_Imageview"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_tds"
                            android:layout_marginStart="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TDS"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:id="@+id/tds_Textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100 %"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/calibribold"
                                android:textSize="25sp"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/noDataContainer">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No data..."
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>






        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>